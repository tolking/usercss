/* 全局样式 */
html
	background-color var(--c-background)

body
	background-color var(--c-background)
	background-image none
	overflow-x hidden

a
a div
a p
a span
h1
h2
h3
h4
h5
h6
input
textarea
.nickname
.title
.link-title
	color var(--c-title) !important

body
p
span
li
label
.count
	color var(--c-text) !important

div:not(.bilibili-danmaku)
	color var(--c-text)

a:hover
a div:hover
a p:hover
a span:hover
.is-vip
.is-vip:hover
.nickname--red
.vip-red-name
.bili-header-m .profile-m .big-vip-red
.review-author.is-vip
.username.is-vip
	color var(--c-accent) !important

hr
	border-color var(--c-border) !important
	background-color var(--c-border) !important

/* 表格 */
table
	background-color transparent !important

	thead
	tbody
	thead tr
		border-color var(--c-border) !important
		background-color transparent !important

	tbody tr
		border-color var(--c-border) !important
		background-color transparent !important

		&:nth-child(odd) td
			background-color var(--c-hover) !important

		th
		td
			border-color var(--c-border) !important
			background-color var(--c-background) !important
			color var(--c-text) !important

/* 选择框 */
.selector
	border-color var(--c-border) !important
	background-color var(--c-background) !important

	.current
	.triangle .icon-font
		color var(--c-title) !important

	.data-list
		border-color var(--c-border) !important
		background-color var(--c-background) !important

		li
			transition background-color 0.3s ease-in-out !important

			&:hover
				background-color var(--c-hover) !important

.area-selector
	border-color var(--c-border) !important
	background-color var(--c-background) !important

.area-panel
	border-color var(--c-border) !important
	background-color var(--c-background) !important

/* switch 开关 */
.bl-switch
	border 1px solid var(--c-border)
	background-color var(--c-background) !important
	transition all 0.3s ease-in-out

	&::after
		background-color var(--c-white) !important

	&.bl-switch-checked
		border-color var(--c-accent) !important
		background-color var(--c-accent) !important

/* 日历选择器 */
.pika-single
	border 1px solid var(--c-border) !important
	background-color var(--c-background) !important

	.pika-label
		background-color var(--c-hover) !important

	.pika-table
		thead
		tbody
			border-color var(--c-background) !important

	button
		background-color transparent !important
		color var(--c-title) !important

		&::after
			content none !important

	.is-selected button
		background-color var(--c-accent) !important
		color var(--c-white) !important

::-webkit-input-placeholder
	color #d2d2d2

:-moz-placeholder
	color #d2d2d2

::-moz-placeholder
	color #d2d2d2

:-ms-input-placeholder
	color #d2d2d2

/* 滚动条 */
::-webkit-scrollbar
	max-width 6px
	max-height 12px

::-webkit-scrollbar-thumb
	border-radius 6px
	background-color var(--c-scroll)