/* 动态 */
.feed-card .content
  color var(--c-title) !important

.feed-card .card
  border 0 !important
  background-color var(--c-background)

.feed-card .card .main-content
.feed-card .card .card-content
  width auto

.feed-card .card .main-content .user-name a
.video-container .text-area .title
  color var(--c-title) !important

.tc-slate
.video-container .text-area .content
.up-info .up-info-tip
.tc-black
  color var(--c-text)

.feed-card .card .main-content .user-name.big-vip a
.expand-btn
.up-info .up-info-name
  color var(--c-accent) !important

.video-container
.card .more-panel
.card-content .repost
.card-content .not-support
.card-content .deleted
.bg-white
  border-color var(--c-border) !important
  background-color var(--c-hover) !important

.card .more-panel:after
  background-color var(--c-hover) !important
  border-top-color var(--c-border) !important
  border-left-color var(--c-border) !important

.video-container .types
  background-color var(--c-accent) !important
  color var(--c-white) !important

.up-info .up-focus-btn
  border-color var(--c-border) !important
  color var(--c-text) !important

.card .more-panel
  border-color var(--c-border) !important
  box-shadow none !important
  background-color var(--c-background) !important
  color var(--c-title) !important

.card .more-panel .child-button:hover
  background-color var(--c-hover) !important
  color var(--c-title) !important

.card .more-panel:after
  border-color var(--c-border) !important
  background-color var(--c-background) !important