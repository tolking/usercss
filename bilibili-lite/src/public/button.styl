    color var(--c-white) !important

  &::after
    content ''
    display block
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background-image linear-gradient(70deg, transparent 20%, rgba(255, 255, 255, 0.3), transparent 80%)
    transform translateX(-100%)
    transition transform 0.5s ease-in-out !important

  &:hover
