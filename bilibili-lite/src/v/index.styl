url-prefix("https://www.bilibili.com/cinema/"),
url-prefix("https://www.bilibili.com/documentary/"),
url-prefix("https://www.bilibili.com/movie/"),
url-prefix("https://www.bilibili.com/tv/"),
url-prefix("https://www.bilibili.com/blackboard/"),
url-prefix("https://www.bilibili.com/list/") {
