.banner
.link-footer
.child-nav .nav-remind
.wrap .state-null>.txt>p:before
.wrapper .content .state-null>.txt>p:before
  display none !important

.top3 li div.content-detail
.rank-detail .top50
.rank-detail .my-info
.progress-tv
#comment
  background-color var(--c-background) !important

.rank-detail .top50 li:nth-child(2n)
  background-color var(--c-hover) !important

#app-ctnr .content
.child-nav
.rank-detail dd .score
  background-color transparent !important

.top3 .content-detail>p>span
.rank-detail dd .score span
.rank-detail dd .score span:hover
