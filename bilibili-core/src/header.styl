@-moz-document url-prefix("https://www.bilibili.com/")
  .bili-header
    .bili-header__bar
      .left-entry
        width 0
        white-space nowrap
        li
          opacity 0
          transform translateY(-64px)
          transition all 0.5s ease
          &:first-child
            opacity 1
            transform translateY(0)
            .entry-title svg
              width 26px
              height 26px
            span
              font-size 0
            .mini-header__title
              display none
            .v-popover span
              font-size 100%
          &:nth-child(n + 7)
            display none
          for n in 2 3 4 5 6 7
            &:nth-child({n})
              transition-delay 0.05s * (n - 1)
        &:hover li
          opacity 1
          transform translateY(0)
          transition all 0.5s ease
      .right-entry
        .v-popover-wrap:nth-child(2)
          display none
        .right-entry-item--upload .header-upload-entry
          flex-direction column
          margin-left 0
          width auto
          height 39px
          background transparent
          font-size 13px
          line-height 1.25
          font-weight 400
          .header-upload-entry__icon
            margin-right 0
            margin-bottom 4px
            transform scale(1.2)

    .bili-header__channel
      .channel-icons
      .channel-items__right
        display none
      .channel-items__left
        padding-right 0
        border-right 0
