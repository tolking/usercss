{
  "name": "usercss",
  "version": "1.0.0",
  "description": "基于Stylus, xStyle的样式",
  "author": "tolking <qw13131wang@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/tolking/usercss",
  "bugs": {
    "url": "https://github.com/tolking/usercss/issues"
  },
  "homepage": "https://github.com/tolking/usercss",
  "keywords": [
    "usercss",
    "styles",
    "css",
    "bilibili",
    "weibo"
  ],
  "scripts": {
    "build": "npm run build:bl && npm run build:bp && build:bc && npm run build:wl && npm run build:wd && build:nh",
    "dev:bl": "stylus -w ./bilibili-lite/src/index.styl -o ./bilibili-lite/index.user.css",
    "build:bl": "stylus ./bilibili-lite/src/index.styl -o ./bilibili-lite/index.user.css",
    "dev:bp": "stylus -w ./bilibili-palette/src/index.styl -o ./bilibili-palette/index.user.css",
    "build:bp": "stylus ./bilibili-palette/src/index.styl -o ./bilibili-palette/index.user.css",
    "dev:bc": "stylus -w ./bilibili-core/src/index.styl -o ./bilibili-core/index.user.css",
    "build:bc": "stylus ./bilibili-core/src/index.styl -o ./bilibili-core/index.user.css",
    "dev:wb": "stylus -w ./weibo-lite/src/index.styl -o ./weibo-lite/index.user.css",
    "build:wb": "stylus ./weibo-lite/src/index.styl -o ./weibo-lite/index.user.css",
    "dev:wd": "stylus -w ./weibo-dark/src/index.styl -o ./weibo-dark/index.user.css",
    "build:wd": "stylus ./weibo-dark/src/index.styl -o ./weibo-dark/index.user.css",
    "dev:nh": "stylus -w ./no-hidden/src/index.styl -o ./no-hidden/index.user.css",
    "build:nh": "stylus ./no-hidden/src/index.styl -o ./no-hidden/index.user.css",
    "dev:jp": "stylus -w ./juejin-palette/src/index.styl -o ./juejin-palette/index.user.css",
    "build:jp": "stylus ./juejin-palette/src/index.styl -o ./juejin-palette/index.user.css"
  },
  "devDependencies": {
    "stylus": "^0.57.0"
  }
}
